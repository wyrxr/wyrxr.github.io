<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/list_fragment">

    <fragment
        android:id="@+id/list_fragment"
        android:name="com.zybooks.weighttrackerprojectthreenathanielingle.ListFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/list_to_weight"
            app:destination="@id/weigh_in_fragment" />
    </fragment>
    <fragment
        android:id="@+id/weigh_in_fragment"
        android:name="com.zybooks.weighttrackerprojectthreenathanielingle.WeighInFragment"
        android:label="@string/weigh_in_fragment"
        tools:layout="@layout/fragment_weigh_in">
        <argument
            android:name="weigh_in_id"
            android:defaultValue="1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/goal_weight_fragment"
        android:name="com.zybooks.weighttrackerprojectthreenathanielingle.GoalWeightFragment"
        android:label="What is your current weight goal?"
        tools:layout="@layout/fragment_goal_weight">
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.zybooks.weighttrackerprojectthreenathanielingle.LoginFragment"
        android:label="Log In Or Register"
        tools:layout="@layout/fragment_login">
    </fragment>


</navigation>